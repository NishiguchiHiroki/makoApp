= render 'layouts/header'
= render "template/menu_selections"
.menu-container
  %h2 Single Menu
  .menu-contents
    - @single_menus.each do |single|
      = form_for @cart, url: menu_carts_path(single), method: :post do |f|
        .menu-package
          .menu-image
            = link_to "single_menu/#{single.id}" do
              = image_tag single.image, width:"200px", height:"150px"
            %h4
              = link_to do
                = single.name
            .count-price-container
              .count-price
                .price
                  %p
                    ¥#{single.price}
                    %span (税込)
                .count
                  =f.select :quantity, options_for_select(1..10), include_blank: '0'
              =f.submit "カートの中に入れる"
= render 'layouts/footer'

<%= render 'layouts/header' %>
<%= render "template/menu_selections" %>
  <div class="menu-container">
    <h2>Single Menu</h2>
<div class="menu-contents">
  <% @single_menus.each do |single| %>
    <form action="" method="post" >
  <div class="menu-package">
  <div class="menu-image">
    <%= link_to "single_menu/#{single.id}" do%><%= image_tag single.image, width:"200px", height:"150px" %><% end %>
      <h4><%= link_to do%><%= single.name %><% end %></h4>
   <div class="count-price-container">
     <div class="count-price">
       <div class="price">
         <p>¥<%= single.price %><span>(税込)</span></p>
       </div>
       <div class="count">
         <label>
         <select name="">
           <% for count in 0..10 do%>
                 <option value="#{count}"><%= count %></option>
               <% end %>
         </select>
         </label>
      </div>
    </div>
      <input type="submit" value="カートの中に入れる">
   </div>
  </div>
</div>
</form>
<% end %>

</div>
</div>
<%= render 'layouts/footer' %>
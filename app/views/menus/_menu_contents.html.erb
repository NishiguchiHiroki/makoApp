<div class="menu-contents">
<% @menus.each do |menu| %>
   <form action="" method="post" >
     <div class="menu-package">
       <div class="menu-image">
         <%= image_tag menu.image ,width:"200px", height:"150px"%>
         <h4><%= link_to "#{menu.name}" %></h4>
       <div class="count-price-container">
         <div class="count-price">
           <div class="price">
             <p>￥500<span>(税込)</span></p>
           </div>
         <div class="count">
           <label>
             <select name="">
               <% for count in 0..10 do%>
                 <option value="#{count}"><%= count %></option>
               <% end %>
             </select>
           </label>
         </div>
       </div>
       <input type="submit" value="カートの中に入れる">
     </div>
  </div>
</div>
</form>
<% end %>
</div>

